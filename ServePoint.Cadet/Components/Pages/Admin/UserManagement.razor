@page "/admin/users"
@rendermode InteractiveServer

@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Identity
@using Microsoft.EntityFrameworkCore
@using ServePoint.Cadet.Auth
@using ServePoint.Cadet.Data

@attribute [Authorize(Roles = Roles.Admin)]

@inject UserManager<ApplicationUser> UserManager
@inject RoleManager<IdentityRole> RoleManager
@inject ApplicationDbContext Db
@inject IConfiguration Configuration
@inject AuthenticationStateProvider AuthStateProvider

<PageTitle>User Management</PageTitle>

<h1>User Management</h1>

@if (!string.IsNullOrWhiteSpace(m_Status))
{
    <div class="alert alert-info">@m_Status</div>
}

@if (!string.IsNullOrWhiteSpace(m_Error))
{
    <div class="alert alert-danger">@m_Error</div>
}

@if (m_Rows is null)
{
    <p>Loading users…</p>
}
else if (m_Rows.Count == 0)
{
    <p>No users found.</p>
}
else
{
    <div class="mb-3">
        <input class="form-control" placeholder="Search email/username..."
               @bind="m_Search" @bind:event="oninput" />
    </div>

    <div class="card sp-card sp-table-shell shadow-sm">
        <div class="table-responsive">
            <table class="table table-sm align-middle mb-0">
                <thead>
                    <tr>
                        <th style="width: 35%"><span class="sp-label">Email / Username</span></th>
                        <th style="width: 35%"><span class="sp-label">Roles</span></th>
                        <th style="width: 30%"><span class="sp-label">Actions</span></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var r in FilteredRows)
                    {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center gap-2">
                                    <b>@(r.Email ?? r.UserName)</b>

                                    @if (AdminSentinel.IsProtectedAdmin(r.Email, Configuration))
                                    {
                                        <span class="badge bg-warning text-dark"
                                              title="This is the built-in admin account and cannot be demoted from Admin.">
                                            Protected
                                        </span>
                                    }
                                </div>

                                <div class="text-muted" style="font-size: 0.9em">@r.Id</div>
                            </td>

                            <td>
                                @if (r.Roles.Count == 0)
                                {
                                    <span class="text-muted">None</span>
                                }
                                else
                                {
                                    @foreach (var role in r.Roles.OrderBy(x => x))
                                    {
                                        <span class="badge bg-secondary me-1">@role</span>
                                    }
                                }
                            </td>

                            <td>
                                <div class="d-flex flex-wrap gap-2">
                                    <select class="form-select form-select-sm" style="width: 160px"
                                            @bind="r.SelectedRoleToAdd">
                                        <option value="">Add role…</option>
                                        @foreach (var role in GetAddableRoles(r))
                                        {
                                            <option value="@role">@role</option>
                                        }
                                    </select>

                                    <button class="btn btn-sm btn-primary"
                                            disabled="@string.IsNullOrWhiteSpace(r.SelectedRoleToAdd)"
                                            @onclick="() => AddRole(r.Id, r.SelectedRoleToAdd!)">
                                        Add
                                    </button>

                                    <select class="form-select form-select-sm" style="width: 160px"
                                            @bind="r.SelectedRoleToRemove">
                                        <option value="">Remove role…</option>
                                        @foreach (var role in GetRemovableRoles(r))
                                        {
                                            <option value="@role">@role</option>
                                        }
                                    </select>

                                    <button class="btn btn-sm btn-outline-danger"
                                            disabled="@string.IsNullOrWhiteSpace(r.SelectedRoleToRemove)"
                                            @onclick="() => RemoveRole(r.Id, r.SelectedRoleToRemove!)">
                                        Remove
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}

@code {
    private List<UserRow>? m_Rows;
    private string m_Search = "";
    private string? m_Status;
    private string? m_Error;

    private string? m_CurrentUserId;
    private string? m_ProtectedAdminEmail;
    private int m_AdminCount;

    protected override async Task OnInitializedAsync()
        => await LoadAsync();

    private IEnumerable<UserRow> FilteredRows =>
        string.IsNullOrWhiteSpace(m_Search)
            ? m_Rows!
            : m_Rows!.Where(r =>
                (r.Email ?? "").Contains(m_Search, StringComparison.OrdinalIgnoreCase) ||
                (r.UserName ?? "").Contains(m_Search, StringComparison.OrdinalIgnoreCase));

    private async Task LoadAsync()
    {
        ClearMessages();

        // Cache for dropdown filtering / removal rules
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        m_CurrentUserId = UserManager.GetUserId(authState.User);
        m_ProtectedAdminEmail = AdminSentinel.GetProtectedAdminEmail(Configuration);
        m_AdminCount = (await UserManager.GetUsersInRoleAsync(Roles.Admin)).Count;

        var users = await UserManager.Users
            .AsNoTracking()
            .OrderBy(u => u.Email)
            .Select(u => new { u.Id, u.Email, u.UserName })
            .ToListAsync();

        // Single query for all user->role names (no N+1)
        var userRoles = await (
            from ur in Db.UserRoles
            join r in Db.Roles on ur.RoleId equals r.Id
            select new { ur.UserId, RoleName = r.Name! }
        ).ToListAsync();

        var roleLookup = userRoles
            .GroupBy(x => x.UserId)
            .ToDictionary(g => g.Key, g => g.Select(x => x.RoleName).ToList());

        var rows = new List<UserRow>(users.Count);
        foreach (var u in users)
        {
            roleLookup.TryGetValue(u.Id, out var roles);
            rows.Add(new UserRow
            {
                Id = u.Id,
                Email = u.Email,
                UserName = u.UserName,
                Roles = roles ?? new List<string>()
            });
        }

        m_Rows = rows;
        NormalizeSelections();
    }

    private IEnumerable<string> GetAddableRoles(UserRow r)
    {
        var current = r.Roles.ToHashSet(StringComparer.OrdinalIgnoreCase);
        return Roles.All.Where(role => !current.Contains(role));
    }

    private IEnumerable<string> GetRemovableRoles(UserRow r)
    {
        foreach (var role in r.Roles.OrderBy(x => x))
        {
            if (CanRemoveRole(r, role))
                yield return role;
        }
    }

    private bool CanRemoveRole(UserRow target, string role)
    {
        if (!role.Equals(Roles.Admin, StringComparison.OrdinalIgnoreCase))
            return true;

        // Built-in protected admin can never lose Admin
        if (!string.IsNullOrWhiteSpace(m_ProtectedAdminEmail) &&
            string.Equals(target.Email, m_ProtectedAdminEmail, StringComparison.OrdinalIgnoreCase))
            return false;

        // Current admin cannot remove Admin from self
        if (!string.IsNullOrWhiteSpace(m_CurrentUserId) &&
            string.Equals(target.Id, m_CurrentUserId, StringComparison.Ordinal))
            return false;

        // Cannot remove the last Admin
        if (m_AdminCount <= 1)
            return false;

        return true;
    }

    private void NormalizeSelections()
    {
        if (m_Rows is null) return;

        foreach (var r in m_Rows)
        {
            if (!string.IsNullOrWhiteSpace(r.SelectedRoleToAdd) &&
                !GetAddableRoles(r).Contains(r.SelectedRoleToAdd!, StringComparer.OrdinalIgnoreCase))
            {
                r.SelectedRoleToAdd = null;
            }

            if (!string.IsNullOrWhiteSpace(r.SelectedRoleToRemove) &&
                !GetRemovableRoles(r).Contains(r.SelectedRoleToRemove!, StringComparer.OrdinalIgnoreCase))
            {
                r.SelectedRoleToRemove = null;
            }
        }
    }

    private async Task AddRole(string userId, string role)
    {
        try
        {
            ClearMessages();

            if (!await RoleManager.RoleExistsAsync(role))
            {
                m_Error = $"Role '{role}' does not exist.";
                return;
            }

            var user = await UserManager.FindByIdAsync(userId);
            if (user is null)
            {
                m_Error = "User not found.";
                return;
            }

            if (await UserManager.IsInRoleAsync(user, role))
            {
                m_Status = $"User already has role '{role}'.";
                return;
            }

            var result = await UserManager.AddToRoleAsync(user, role);
            if (!result.Succeeded)
            {
                m_Error = string.Join(" | ", result.Errors.Select(e => e.Description));
                return;
            }

            m_Status = $"Added '{role}' to {(user.Email ?? user.UserName)}.";
            await LoadAsync();
        }
        catch (Exception ex)
        {
            m_Error = ex.Message;
        }
    }

    private async Task RemoveRole(string userId, string role)
    {
        try
        {
            ClearMessages();

            var user = await UserManager.FindByIdAsync(userId);
            if (user is null)
            {
                m_Error = "User not found.";
                return;
            }

            if (!await UserManager.IsInRoleAsync(user, role))
            {
                m_Status = $"User does not have role '{role}'.";
                return;
            }

            if (role.Equals(Roles.Admin, StringComparison.OrdinalIgnoreCase))
            {
                if (AdminSentinel.IsProtectedAdmin(user.Email, Configuration))
                {
                    m_Error = $"You cannot remove Admin from the built-in admin account ({AdminSentinel.GetProtectedAdminEmail(Configuration)}).";
                    return;
                }

                var authState = await AuthStateProvider.GetAuthenticationStateAsync();
                var currentUserId = UserManager.GetUserId(authState.User);
                if (!string.IsNullOrWhiteSpace(currentUserId) && currentUserId == userId)
                {
                    m_Error = "You cannot remove Admin from yourself.";
                    return;
                }

                var admins = await UserManager.GetUsersInRoleAsync(Roles.Admin);
                if (admins.Count <= 1)
                {
                    m_Error = "You must have at least one Admin account.";
                    return;
                }
            }

            var result = await UserManager.RemoveFromRoleAsync(user, role);
            if (!result.Succeeded)
            {
                m_Error = string.Join(" | ", result.Errors.Select(e => e.Description));
                return;
            }

            m_Status = $"Removed '{role}' from {(user.Email ?? user.UserName)}.";
            await LoadAsync();
        }
        catch (Exception ex)
        {
            m_Error = ex.Message;
        }
    }

    private void ClearMessages()
    {
        m_Status = null;
        m_Error = null;
    }

    private sealed class UserRow
    {
        public string Id { get; set; } = "";
        public string? Email { get; set; }
        public string? UserName { get; set; }
        public List<string> Roles { get; set; } = new();

        public string? SelectedRoleToAdd { get; set; }
        public string? SelectedRoleToRemove { get; set; }
    }
}
