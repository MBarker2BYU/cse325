@page "/admin/users"
@rendermode InteractiveServer

@using Microsoft.AspNetCore.Authorization
@using ServePoint.Cadet.Auth
@using ServePoint.Cadet.Data.Services

@attribute [Authorize(Roles = Roles.Admin)]

@inject UserManagementService UserMgmt
@inject AuthenticationStateProvider AuthStateProvider

<PageTitle>User Management</PageTitle>

<h1>User Management</h1>

@if (!string.IsNullOrWhiteSpace(m_Status))
{
    <div class="alert alert-info">@m_Status</div>
}

@if (!string.IsNullOrWhiteSpace(m_Error))
{
    <div class="alert alert-danger">@m_Error</div>
}

@if (m_Rows is null)
{
    <p>Loading users…</p>
}
else if (m_Rows.Count == 0)
{
    <p>No users found.</p>
}
else
{
    <div class="mb-3">
        <input class="form-control" placeholder="Search email/username..."
               @bind="m_Search" @bind:event="oninput" />
    </div>

    <div class="card sp-card sp-table-shell shadow-sm">
        <div class="table-responsive">
            <table class="table table-sm align-middle mb-0">
                <thead>
                    <tr>
                        <th style="width: 25%"><span class="sp-label">Email / Username</span></th>
                        <th style="width: 10%"><span class="sp-label">Status</span></th>
                        <th style="width: 20%"><span class="sp-label">Roles</span></th>
                        <th style="width: 45%"><span class="sp-label">Actions</span></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var r in FilteredRows)
                    {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center gap-2">
                                    <b>@(r.Email ?? r.UserName)</b>

                                    @if (IsProtectedAdmin(r.Email))
                                    {
                                        <span class="badge bg-warning text-dark"
                                              title="This is the built-in admin account and cannot be demoted from Admin.">
                                            Protected
                                        </span>
                                    }
                                </div>

                                <div class="text-muted" style="font-size: 0.9em">@r.Id</div>
                            </td>
                            
                            <td>
                                @if (IsSuspended(r))
                                {
                                    <span class="badge bg-danger">Suspended</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                            </td>


                            <td>
                                @if (r.Roles.Count == 0)
                                {
                                    <span class="text-muted">None</span>
                                }
                                else
                                {
                                    @foreach (var role in r.Roles.OrderBy(x => x))
                                    {
                                        <span class="badge sp-role-pill me-1">@role</span>
                                    }
                                }
                            </td>

                            <td>
                                <div class="d-flex flex-column gap-2">

                                    <div class="d-flex gap-3 align-items-start flex-wrap w-100 justify-content-end">

                                        <!-- Left: account actions -->
                                        <div style="min-width: 110px">
                                            @if (CanShowSuspendControls(r))
                                            {
                                                if (IsSuspended(r))
                                                {
                                                    <button class="btn btn-sm btn-outline-success"
                                                            @onclick="() => Unsuspend(r.Id)">
                                                        Unsuspend
                                                    </button>
                                                }
                                                else
                                                {
                                                    <button class="btn btn-sm btn-outline-danger"
                                                            @onclick="() => Suspend(r.Id)">
                                                        Suspend
                                                    </button>
                                                }
                                            }
                                        </div>

                                        <!-- Right: role actions -->
                                        <div class="d-flex gap-2 align-items-center flex-wrap">
                                            <select class="form-select form-select-sm" style="width: 160px"
                                                    @bind="r.SelectedRoleToAdd">
                                                <option value="">Add role…</option>
                                                @foreach (var role in GetAddableRoles(r))
                                                {
                                                    <option value="@role">@role</option>
                                                }
                                            </select>

                                            <button class="btn btn-sm btn-primary"
                                                    disabled="@string.IsNullOrWhiteSpace(r.SelectedRoleToAdd)"
                                                    @onclick="() => AddRole(r.Id, r.SelectedRoleToAdd!)">
                                                Add
                                            </button>

                                            <select class="form-select form-select-sm" style="width: 160px"
                                                    @bind="r.SelectedRoleToRemove">
                                                <option value="">Remove role…</option>
                                                @foreach (var role in GetRemovableRoles(r))
                                                {
                                                    <option value="@role">@role</option>
                                                }
                                            </select>

                                            <button class="btn btn-sm btn-outline-danger"
                                                    disabled="@string.IsNullOrWhiteSpace(r.SelectedRoleToRemove)"
                                                    @onclick="() => RemoveRole(r.Id, r.SelectedRoleToRemove!)">
                                                Remove
                                            </button>
                                        </div>
                                    </div>


                                </div>
                            </td>



                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}

@code {
    private List<UserRow>? m_Rows;
    private string m_Search = "";
    private string? m_Status;
    private string? m_Error;

    private string? m_CurrentUserId;
    private string m_ProtectedAdminEmail = "";
    private int m_AdminCount;

    protected override async Task OnInitializedAsync()
        => await LoadAsync();

    private IEnumerable<UserRow> FilteredRows =>
        string.IsNullOrWhiteSpace(m_Search)
            ? m_Rows!
            : m_Rows!.Where(r =>
                (r.Email ?? "").Contains(m_Search, StringComparison.OrdinalIgnoreCase) ||
                (r.UserName ?? "").Contains(m_Search, StringComparison.OrdinalIgnoreCase));

    private async Task LoadAsync()
    {
        ClearMessages();

        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        m_CurrentUserId = authState.User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;

        var result = await UserMgmt.LoadAsync(m_CurrentUserId);

        m_CurrentUserId = result.CurrentUserId;
        m_ProtectedAdminEmail = result.ProtectedAdminEmail;
        m_AdminCount = result.AdminCount;

        // Convert service DTO -> page row (adds dropdown selections)
        m_Rows = result.Rows.Select(r => new UserRow
        {
            Id = r.Id,
            Email = r.Email,
            UserName = r.UserName,
            Roles = r.Roles,
            LockoutEndUtc = r.LockoutEndUtc
        }).ToList();


        NormalizeSelections();
    }

    private bool IsProtectedAdmin(string? email)
        => !string.IsNullOrWhiteSpace(email)
           && string.Equals(email, m_ProtectedAdminEmail, StringComparison.OrdinalIgnoreCase);

    private IEnumerable<string> GetAddableRoles(UserRow r)
    {
        // Hierarchy: User < Organizer < Instructor < Admin
        var hasAdmin = r.Roles.Any(x => x.Equals(Roles.Admin, StringComparison.OrdinalIgnoreCase));
        if (hasAdmin) return Array.Empty<string>();

        var hasInstructor = r.Roles.Any(x => x.Equals(Roles.Instructor, StringComparison.OrdinalIgnoreCase));
        if (hasInstructor) return new[] { Roles.Admin };

        var hasOrganizer = r.Roles.Any(x => x.Equals(Roles.Organizer, StringComparison.OrdinalIgnoreCase));
        if (hasOrganizer) return new[] { Roles.Instructor, Roles.Admin };

        // Default: treat as User-level (or no roles)
        return new[] { Roles.Organizer, Roles.Instructor, Roles.Admin };
    }


    private IEnumerable<string> GetRemovableRoles(UserRow r)
    {
        foreach (var role in r.Roles.OrderBy(x => x))
        {
            if (CanRemoveRole(r, role))
                yield return role;
        }
    }

    private bool CanRemoveRole(UserRow target, string role)
    {
        if (!role.Equals(Roles.Admin, StringComparison.OrdinalIgnoreCase))
            return true;

        if (IsProtectedAdmin(target.Email))
            return false;

        if (!string.IsNullOrWhiteSpace(m_CurrentUserId) &&
            string.Equals(target.Id, m_CurrentUserId, StringComparison.Ordinal))
            return false;

        if (m_AdminCount <= 1)
            return false;

        return true;
    }

    private void NormalizeSelections()
    {
        if (m_Rows is null) return;

        foreach (var r in m_Rows)
        {
            if (!string.IsNullOrWhiteSpace(r.SelectedRoleToAdd) &&
                !GetAddableRoles(r).Contains(r.SelectedRoleToAdd!, StringComparer.OrdinalIgnoreCase))
            {
                r.SelectedRoleToAdd = null;
            }

            if (!string.IsNullOrWhiteSpace(r.SelectedRoleToRemove) &&
                !GetRemovableRoles(r).Contains(r.SelectedRoleToRemove!, StringComparer.OrdinalIgnoreCase))
            {
                r.SelectedRoleToRemove = null;
            }
        }
    }

    private async Task AddRole(string userId, string role)
    {
        try
        {
            ClearMessages();

            var (ok, message) = await UserMgmt.AddRoleAsync(userId, role);
            if (!ok) { m_Error = message; return; }

            m_Status = message;
            await LoadAsync();
        }
        catch (Exception ex)
        {
            m_Error = ex.Message;
        }
    }

    private async Task RemoveRole(string userId, string role)
    {
        try
        {
            ClearMessages();

            var (ok, message) = await UserMgmt.RemoveRoleAsync(
                userId,
                role,
                m_CurrentUserId,
                m_AdminCount);

            if (!ok) { m_Error = message; return; }

            m_Status = message;
            await LoadAsync();
        }
        catch (Exception ex)
        {
            m_Error = ex.Message;
        }
    }

    private void ClearMessages()
    {
        m_Status = null;
        m_Error = null;
    }

    private bool IsSuspended(UserRow r)
        => r.LockoutEndUtc.HasValue && r.LockoutEndUtc.Value > DateTimeOffset.UtcNow;

    private bool CanShowSuspendControls(UserRow r)
    {
        if (IsProtectedAdmin(r.Email))
            return false;

        if (!string.IsNullOrWhiteSpace(m_CurrentUserId) &&
            string.Equals(r.Id, m_CurrentUserId, StringComparison.Ordinal))
            return false;

        return true;
    }


    private async Task Suspend(string userId)
    {
        try
        {
            ClearMessages();

            var (ok, message) = await UserMgmt.SuspendAsync(userId, m_CurrentUserId);
            if (!ok) { m_Error = message; return; }

            m_Status = message;
            await LoadAsync();
        }
        catch (Exception ex)
        {
            m_Error = ex.Message;
        }
    }

    private async Task Unsuspend(string userId)
    {
        try
        {
            ClearMessages();

            var (ok, message) = await UserMgmt.UnsuspendAsync(userId);
            if (!ok) { m_Error = message; return; }

            m_Status = message;
            await LoadAsync();
        }
        catch (Exception ex)
        {
            m_Error = ex.Message;
        }
    }


    // Page-only row type (keeps dropdown selections)
    private sealed class UserRow
    {
        public string Id { get; set; } = "";
        public string? Email { get; set; }
        public string? UserName { get; set; }
        public List<string> Roles { get; set; } = new();

        public string? SelectedRoleToAdd { get; set; }
        public string? SelectedRoleToRemove { get; set; }

        public DateTimeOffset? LockoutEndUtc { get; set; }
    }
}
