@using Microsoft.AspNetCore.Identity
@using Microsoft.EntityFrameworkCore
@using ServePoint.Cadet.Auth
@using ServePoint.Cadet.Data
@using ServePoint.Cadet.Extensions
@implements IDisposable

@inject NavigationManager NavigationManager
@inject IDbContextFactory<ApplicationDbContext> DbFactory
@inject AuthenticationStateProvider AuthStateProvider
@inject UserManager<ApplicationUser> UserManager

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">ServePoint.Cadet</a>
    </div>
</div>

<div class="nav-scrollable sp-navshell">

    <!-- SCROLLING AREA -->
    <div class="sp-navscroll">
        <nav class="nav flex-column">

            <AuthorizeView Roles="@($"{Roles.User},{Roles.Organizer},{Roles.Instructor},{Roles.Admin}")">
                <Authorized>
                    <div class="nav-item px-3">
                        <NavLink class="nav-link sp-nav-link" href="opportunities/manage" Match="NavLinkMatch.Prefix">
                            <span class="bi bi-calendar-event-fill-nav-menu" aria-hidden="true"></span>
                            <span class="ms-2">Opportunities</span>
                        </NavLink>
                    </div>
                </Authorized>
            </AuthorizeView>

            <AuthorizeView Roles="@Roles.Admin">
                <Authorized>
                    <div class="nav-item px-3">
                        <NavLink class="nav-link sp-nav-link" href="admin/users" Match="NavLinkMatch.Prefix">
                            <span class="bi bi-people-fill-nav-menu" aria-hidden="true"></span>
                            User Management
                            <span class="badge bg-warning text-dark ms-2" title="Admin only">Protected</span>
                        </NavLink>
                    </div>
                </Authorized>
            </AuthorizeView>

            <AuthorizeView>
                <Authorized>
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="Account/Logout">
                            <span class="bi bi-arrow-bar-left-nav-menu" aria-hidden="true"></span>
                            Logout
                        </NavLink>
                    </div>
                </Authorized>

                <NotAuthorized>
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="Account/Register">
                            <span class="bi bi-person-nav-menu" aria-hidden="true"></span>
                            Register
                        </NavLink>
                    </div>
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="Account/Login">
                            <span class="bi bi-person-badge-nav-menu" aria-hidden="true"></span>
                            Login
                        </NavLink>
                    </div>
                </NotAuthorized>
            </AuthorizeView>

        </nav>
    </div>

    <!-- LOCKED BOTTOM AREA (NO SCROLL) -->
    <div class="sp-sidebar-bottom">

        <AuthorizeView Context="auth">
            <Authorized>
                <a class="sp-usercard-link" href="Account/Manage" onclick="event.stopPropagation();">
                    <div class="sp-usercard sp-usercard-big">
                        @if (!string.IsNullOrWhiteSpace(m_EmblemPath))
                        {
                            <img class="sp-usercard-emblem sp-usercard-emblem-big"
                                 src="@m_EmblemPath"
                                 alt="@m_Emblem.ToDisplay()" />
                        }

                        <div class="sp-usercard-service">@m_Emblem.ToDisplay()</div>
                        <div class="sp-usercard-identity">
                            @(!string.IsNullOrWhiteSpace(m_DisplayName) ? m_DisplayName : auth.User.Identity?.Name)
                        </div>
                    </div>
                </a>
            </Authorized>
        </AuthorizeView>

        <div class="sp-sidebar-footer" onclick="event.stopPropagation();">
            <NavLink href="about" class="nav-link">About</NavLink>
        </div>

    </div>

</div>

@code {
    // Always send ReturnUrl with a leading "/" (or "/") so Identity doesn't redirect to a non-route.
    private string m_ReturnUrl = "/";

    private ServiceEmblem m_Emblem = ServiceEmblem.None;
    private string? m_EmblemPath;
    private string? m_DisplayName;

    protected override void OnInitialized()
    {
        // SetReturnUrl(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;

        // Refresh usercard when auth state changes (login/logout)
        AuthStateProvider.AuthenticationStateChanged += OnAuthStateChanged;
    }

    // private void SetReturnUrl(string absoluteUri)
    // {
    //     var rel = NavigationManager.ToBaseRelativePath(absoluteUri);

    //     // Normalize:
    //     // "" -> "/"
    //     // "dashboard" -> "/dashboard"
    //     // "Account/Login?x=1" -> "/Account/Login?x=1"
    //     m_ReturnUrl = string.IsNullOrWhiteSpace(rel) ? "/" : "/" + rel;
    // }

    private async void OnAuthStateChanged(Task<AuthenticationState> task)
    {
        try
        {
            var state = await task;
            await RefreshUserCardAsync(state.User);
        }
        catch
        {
            // ignore; UI will still fall back safely
        }

        await InvokeAsync(StateHasChanged);
    }

    protected override async Task OnParametersSetAsync()
    {
        // Also refresh on first render / navigation
        var auth = await AuthStateProvider.GetAuthenticationStateAsync();
        await RefreshUserCardAsync(auth.User);
    }

    private async Task RefreshUserCardAsync(System.Security.Claims.ClaimsPrincipal principal)
    {
        // Not logged in -> clear card
        if (principal?.Identity?.IsAuthenticated != true)
        {
            m_DisplayName = null;
            m_Emblem = ServiceEmblem.None;
            m_EmblemPath = null;
            return;
        }

        var user = await UserManager.GetUserAsync(principal);
        if (user is null)
        {
            m_DisplayName = null;
            m_Emblem = ServiceEmblem.None;
            m_EmblemPath = null;
            return;
        }

        m_DisplayName = user.DisplayName;

        await using var db = await DbFactory.CreateDbContextAsync();
        var record = await db.UserEmblems
            .AsNoTracking()
            .FirstOrDefaultAsync(x => x.UserId == user.Id);

        m_Emblem = record?.Emblem ?? ServiceEmblem.None;
        m_EmblemPath = m_Emblem.ToImagePath();
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        // SetReturnUrl(e.Location);
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
        AuthStateProvider.AuthenticationStateChanged -= OnAuthStateChanged;
    }
}
