@implements IDisposable
@inject NavigationManager NavigationManager

<nav class="nav flex-column sp-nav">

    <AuthorizeView Context="authCtx">
        <Authorized>
            <div class="nav-item px-3">
                <NavLink class="nav-link sp-nav-link"
                         href="dashboard"
                         Match="NavLinkMatch.All"
                         @attributes="MobileDismissAttrs">
                    <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span>
                    Dashboard
                </NavLink>
            </div>

            <AuthorizeView Roles="@Roles.OpportunityCreators" Context="creatorsCtx">
                <Authorized>
                    <div class="nav-item px-3">
                        <NavLink class="nav-link sp-nav-link"
                                 href="opportunities/manage"
                                 @attributes="MobileDismissAttrs">
                            <span class="bi bi-list-check-nav-menu" aria-hidden="true"></span>
                            Opportunities
                        </NavLink>
                    </div>
                </Authorized>
            </AuthorizeView>

            <AuthorizeView Roles="@Roles.Admin" Context="adminCtx">
                <Authorized>
                    <div class="nav-item px-3">
                        <NavLink class="nav-link sp-nav-link"
                                 href="admin/users"
                                 @attributes="MobileDismissAttrs">
                            <span class="bi bi-people-fill-nav-menu" aria-hidden="true"></span>
                            User Management
                        </NavLink>
                    </div>
                </Authorized>
            </AuthorizeView>

            <div class="sp-nav-sep my-2"></div>

            <div class="nav-item px-3">
                <NavLink class="nav-link sp-nav-link"
                         href="Account/Manage"
                         @attributes="MobileDismissAttrs">
                    <span class="bi bi-person-fill-nav-menu" aria-hidden="true"></span>
                    @authCtx.User.Identity?.Name
                </NavLink>
            </div>

            <div class="nav-item px-3">
                <form action="Account/Logout" method="post" class="m-0">
                    <AntiforgeryToken />
                    <input type="hidden" name="ReturnUrl" value="@m_CurrentUrl" />
                    <button type="submit"
                            class="nav-link sp-nav-link sp-nav-link-button"
                            @attributes="MobileDismissAttrs">
                        <span class="bi bi-arrow-bar-left-nav-menu" aria-hidden="true"></span>
                        Logout
                    </button>
                </form>
            </div>
        </Authorized>

        <NotAuthorized>
            <div class="nav-item px-3">
                <NavLink class="nav-link sp-nav-link"
                         href="Account/Login"
                         @attributes="MobileDismissAttrs">
                    <span class="bi bi-box-arrow-in-right" aria-hidden="true"></span>
                    Login
                </NavLink>
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link sp-nav-link"
                         href="Account/Register"
                         @attributes="MobileDismissAttrs">
                    <span class="bi bi-person-plus" aria-hidden="true"></span>
                    Register
                </NavLink>
            </div>
        </NotAuthorized>
    </AuthorizeView>

</nav>

@code {
    [Parameter] public bool Mobile { get; set; }

    private string? m_CurrentUrl;

    // When this nav is rendered inside the bootstrap offcanvas, dismiss it on click.
    private IReadOnlyDictionary<string, object>? MobileDismissAttrs =>
        Mobile ? new Dictionary<string, object> { ["data-bs-dismiss"] = "offcanvas" } : null;

    protected override void OnInitialized()
    {
        m_CurrentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        m_CurrentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
}
