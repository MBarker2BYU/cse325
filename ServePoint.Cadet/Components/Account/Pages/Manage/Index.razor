@page "/Account/Manage"

@using System.ComponentModel.DataAnnotations
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Identity
@using ServePoint.Cadet.Data

@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager
@inject IdentityRedirectManager RedirectManager

<PageTitle>Profile</PageTitle>

<h3>Profile</h3>
<StatusMessage />

<div class="row">
    <div class="col-xl-6">
        <EditForm Model="Input" FormName="profile" OnValidSubmit="OnValidSubmitAsync" method="post">
            <DataAnnotationsValidator />
            <ValidationSummary class="text-danger" role="alert" />

            <div class="form-floating mb-3">
                <InputText @bind-Value="Input.FirstName"
                           id="Input.FirstName"
                           class="form-control"
                           autocomplete="given-name"
                           aria-required="true"
                           placeholder="First name" />
                <label for="Input.FirstName" class="form-label">First name</label>
                <ValidationMessage For="() => Input.FirstName" class="text-danger" />
            </div>

            <div class="form-floating mb-3">
                <InputText @bind-Value="Input.MiddleName"
                           id="Input.MiddleName"
                           class="form-control"
                           autocomplete="additional-name"
                           aria-required="false"
                           placeholder="Middle name (optional)" />
                <label for="Input.MiddleName" class="form-label">Middle name (optional)</label>
                <ValidationMessage For="() => Input.MiddleName" class="text-danger" />
            </div>

            <div class="form-floating mb-3">
                <InputText @bind-Value="Input.LastName"
                           id="Input.LastName"
                           class="form-control"
                           autocomplete="family-name"
                           aria-required="true"
                           placeholder="Last name" />
                <label for="Input.LastName" class="form-label">Last name</label>
                <ValidationMessage For="() => Input.LastName" class="text-danger" />
            </div>

            <div class="form-floating mb-3">
                <input type="text" value="@m_Username" id="username" class="form-control" placeholder="Choose your username." disabled />
                <label for="username" class="form-label">Username</label>
            </div>

            <div class="form-floating mb-3">
                <InputText @bind-Value="Input.PhoneNumber"
                           id="Input.PhoneNumber"
                           class="form-control"
                           placeholder="Enter your phone number" />
                <label for="Input.PhoneNumber" class="form-label">Phone number</label>
                <ValidationMessage For="() => Input.PhoneNumber" class="text-danger" />
            </div>

            <button type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
        </EditForm>
    </div>
</div>

@code {
    private ApplicationUser? m_User;
    private string? m_Username;
    private string? m_PhoneNumber;

    [CascadingParameter]
    private HttpContext HttpContext { get; set; } = default!;

    // IMPORTANT: matches <EditForm FormName="profile" ...>
    [SupplyParameterFromForm(FormName = "profile")]
    private InputModel Input { get; set; } = default!;

    protected override async Task OnInitializedAsync()
    {
        Input ??= new();

        // One DB hit: get the current user
        m_User = await UserManager.GetUserAsync(HttpContext.User);
        if (m_User is null)
        {
            RedirectManager.RedirectToInvalidUser(UserManager, HttpContext);
            return;
        }

        // Avoid extra store/DbContext calls: read from the user instance
        m_Username = m_User.UserName;
        m_PhoneNumber = m_User.PhoneNumber;

        // Only prefill on initial GET; do NOT overwrite POSTed form values
        if (!HttpMethods.IsPost(HttpContext.Request.Method))
        {
            Input.FirstName = m_User.FirstName ?? "";
            Input.MiddleName = m_User.MiddleName ?? "";
            Input.LastName = m_User.LastName ?? "";
            Input.PhoneNumber = m_PhoneNumber;
        }
    }

    private async Task OnValidSubmitAsync()
    {
        // Re-fetch a fresh user instance for this POST.
        // This avoids holding onto an entity that might be tied to an in-flight DbContext operation.
        var user = await UserManager.GetUserAsync(HttpContext.User);
        if (user is null)
        {
            RedirectManager.RedirectToInvalidUser(UserManager, HttpContext);
            return;
        }

        // ---- Save name fields (First/Middle/Last) ----
        var newFirst = Input.FirstName.Trim();
        var newLast = Input.LastName.Trim();
        var newMiddle = string.IsNullOrWhiteSpace(Input.MiddleName)
            ? null
            : Input.MiddleName.Trim();

        var nameChanged =
            !string.Equals(user.FirstName, newFirst, StringComparison.Ordinal) ||
            !string.Equals(user.LastName, newLast, StringComparison.Ordinal) ||
            !string.Equals(user.MiddleName, newMiddle, StringComparison.Ordinal);

        if (nameChanged)
        {
            user.FirstName = newFirst;
            user.LastName = newLast;
            user.MiddleName = newMiddle;

            var updateResult = await UserManager.UpdateAsync(user);
            if (!updateResult.Succeeded)
            {
                var msg = "Error: " + string.Join(", ", updateResult.Errors.Select(e => e.Description));
                RedirectManager.RedirectToCurrentPageWithStatus(msg, HttpContext);
                return;
            }
        }

        // ---- Phone number logic ----
        // Compare against current value from the freshly loaded user
        var currentPhone = user.PhoneNumber;

        if (!string.Equals(Input.PhoneNumber, currentPhone, StringComparison.Ordinal))
        {
            var setPhoneResult = await UserManager.SetPhoneNumberAsync(user, Input.PhoneNumber);
            if (!setPhoneResult.Succeeded)
            {
                var msg = "Error: " + string.Join(", ", setPhoneResult.Errors.Select(e => e.Description));
                RedirectManager.RedirectToCurrentPageWithStatus(msg, HttpContext);
                return;
            }
        }

        await SignInManager.RefreshSignInAsync(user);

        // Keep local fields in sync (nice for immediate UI render)
        m_User = user;
        m_Username = user.UserName;
        m_PhoneNumber = user.PhoneNumber;

        RedirectManager.RedirectToCurrentPageWithStatus("Your profile has been updated", HttpContext);
    }

    private sealed class InputModel
    {
        [Required, MaxLength(50)]
        [Display(Name = "First name")]
        public string FirstName { get; set; } = "";

        [MaxLength(50)]
        [Display(Name = "Middle name (optional)")]
        public string MiddleName { get; set; } = "";

        [Required, MaxLength(50)]
        [Display(Name = "Last name")]
        public string LastName { get; set; } = "";

        [Phone]
        [Display(Name = "Phone number")]
        public string? PhoneNumber { get; set; }
    }
}
